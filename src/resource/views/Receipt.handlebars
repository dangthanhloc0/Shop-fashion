    <script>
     var count=document.querySelector('#count_product')
     var x=count.value
    
    function render(x){
        count.value=x;
    }

    function reduce(){
        if(x>1){
            x--
            render(x)
        }       
    }
    function Add(){
        if(x<4){
            x++
            render(x)
        }       
    }

    count.addEventListener('input',function(){
        x=count.value
        x=parseInt(x)
        x=(isNaN(x)||x===0)?1:x;
        render(x)
    })

    function ShowMessage(){
        alert('Thêm vào giỏ hàng thành công')
